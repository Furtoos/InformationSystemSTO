<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Інформаційна система СТО</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="offset-2 col-md-8 body-content main">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                @Html.ActionLink("Інформаційна система", "Index", "System", null, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        @Html.ActionLink("Проекти", "Projects", "System", null, new { @class = "nav-item nav-link text-white" })
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Додати обладнення", "NewEquipment", "System", null, new { @class = "nav-item nav-link text-white" })
                        }
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Вийти", "Logout", "Account", null, new { @class = "nav-item nav-link text-white" })
                            }
                            else
                            {
                                @Html.ActionLink("Війти в систему", "Login", "Account", null, new { @class = "nav-item nav-link text-white" })
                            }
                        }

                    </div>
                </div>
            </nav>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
